<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info"
           xmlns:osso="http://nokia.com/osso/mime-categories">
  <mime-type type="text/cpp">

         <comment>C/C++ source file</comment>
         <osso:category name="documents"/>
         <magic priority="50">
                <match type="string" value="C/C++" offset="0"/>

         </magic>
         <glob pattern="*.cpp"/>
         <glob pattern="*.c"/>
         <glob pattern="*.h"/>
  </mime-type>
</mime-info>
